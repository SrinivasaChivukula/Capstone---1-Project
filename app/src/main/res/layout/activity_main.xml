<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Hero Header Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_background"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <!-- Logo with Glow Effect -->
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/gaitvision_logo_modern"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="GaitVision Logo"
                    android:elevation="8dp" />

                <!-- App Title with Gradient Text Effect -->
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GaitVision"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:fontFamily="@font/montserrat_variablefont_wght"
                    android:layout_marginBottom="12dp"
                    android:shadowColor="@color/primary_blue_pale"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="8" />

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_subtitle"
                    android:textSize="18sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />

                <!-- Decorative Line -->
                <View
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:background="@color/secondary_teal"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Participant Information Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/participant_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_background"
            app:layout_constraintTop_toBottomOf="@id/header_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="@color/primary_blue"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/participant_info_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Participant ID Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/participant_id_hint"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="@color/border_focus"
                    app:hintTextColor="@color/text_secondary"
                    app:startIconDrawable="@drawable/ic_person_modern"
                    app:startIconTint="@color/primary_blue">

                    <EditText
                        android:id="@+id/participant_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:padding="16dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Height Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height_label"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/height_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Spinner
                        android:id="@+id/feet_spinner"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/input_field_modern"
                        android:spinnerMode="dropdown"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_feet"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="20dp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/inches_spinner"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/input_field_modern"
                        android:spinnerMode="dropdown"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_inches"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Video Selection Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/video_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_background"
            app:layout_constraintTop_toBottomOf="@id/participant_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="@color/secondary_teal"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/video_selection_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Video Preview with Modern Design -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/surface_light">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_camera_modern"
                        android:scaleType="centerInside"
                        android:contentDescription="Video Preview"
                        android:background="@color/surface_light" />

                </androidx.cardview.widget.CardView>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/camera_btn"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/button_primary_modern"
                        android:text="@string/record_video"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_camera_modern"
                        android:drawablePadding="12dp"
                        android:gravity="center"
                        android:elevation="4dp" />

                    <Button
                        android:id="@+id/open_gal_btn"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/button_secondary_modern"
                        android:text="@string/select_video"
                        android:textColor="@color/button_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_gallery_modern"
                        android:drawablePadding="12dp"
                        android:gravity="center"
                        android:elevation="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Analysis Button - Prominent -->
        <Button
            android:id="@+id/confirm_vid_btn"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_primary_modern"
            android:text="@string/perform_analysis"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_analysis_modern"
            android:drawablePadding="16dp"
            android:gravity="center"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/video_card" />

        <!-- Help Button - Floating -->
        <Button
            android:id="@+id/help01_btn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/round_button"
            android:text="?"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:elevation="12dp"
            app:layout_constraintTop_toBottomOf="@id/confirm_vid_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>