<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GaitVision"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Video Preview -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#1A1A1A">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivVideoPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Video Preview" />

                <TextView
                    android:id="@+id/tvNoVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="No video selected"
                    android:textColor="#666666"
                    android:textSize="16sp" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Participant ID Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participant ID"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etParticipantId"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter ID"
            android:textColorHint="#666666"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Height Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feet"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerFeet"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="#2A2A2A" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inches"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerInches"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="#2A2A2A" />

            </LinearLayout>

        </LinearLayout>

        <!-- Video Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnRecord"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ“¹ Record"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btnSelect"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ“ Select"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:backgroundTint="#2196F3" />

        </LinearLayout>

        <!-- Analyze Button -->
        <Button
            android:id="@+id/btnAnalyze"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="ðŸ”¬ Perform Analysis"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="#9C27B0"
            android:layout_marginBottom="16dp" />

        <!-- View Results Button -->
        <Button
            android:id="@+id/btnViewResults"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="View Past Results"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="#424242"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>
